<?xml version="1.0"?>
<fx:Skin xmlns:fx="library://dart_flex/dart_flex.dart">

  <fx:VGroup id="verticalContainer" percentWidth="100" percentHeight="100">
    <fx:Group height="100"/>
    <fx:HGroup id="horizontalContainer" percentWidth="100" percentHeight="100">
      <fx:Group width="100"/>
      <fx:HGroup id="centerContainer" cssClasses="['main-panel']" paddingBottom="15" percentWidth="100" percentHeight="100">
        <fx:DataGrid 
          id="dataGrid"
          cssClasses="[]"
          percentWidth="{centerContainer.percentWidth}" percentHeight="100"
          headerHeight="30"
          rowHeight="34"
          columnSpacing="0" rowSpacing="0"
          columns="createColumns()"
          dataProvider="createDataProvider()"
          sortHandler="dataGrid_sortHandler" />
        <fx:Accordion 
          id="accordion"
          percentWidth="100" percentHeight="100"
          dataProvider="createAccordionDataProvider()"
          headerItemRendererFactory="{AccordionHeaderItemRenderer}"
          headerHeight="30"
          headerFields="[taskSymbol]"
          headerField="taskNameSymbol"
          contentItemRendererFactory="{SpriteSheetItemRenderer}"
          contentFields="[urgencySymbol]"
          contentField="urgencyNameSymbol" />
        <fx:VGroup id="masterTables" width="200" percentHeight="100">
          <fx:Image 
            id="editTasksImage"
            width="200" height="50"
            source="images/edit_tasks.jpg" />
          <fx:ListRenderer
            id="tasksGrid"
            percentWidth="100" percentHeight="100"
            rowHeight="34"
            rowSpacing="0"
            field="taskNameSymbol"
            itemRendererFactory="{EditableLabelItemRenderer}"
            dataProvider="taskNames" />
          <fx:Image 
            id="editUrgenciesImage"
            width="200" height="50"
            source="'images/edit_urgencies.jpg'" />
          <fx:ListRenderer
            id="urgenciesGrid"
            paddingBottom="30"
            cssClasses="[]"
            percentWidth="100" percentHeight="100"
            rowHeight="34"
            rowSpacing="0"
            field="urgencyNameSymbol"
            itemRendererFactory="{EditableLabelItemRenderer}"
            dataProvider="urgencyNames" />
        </fx:VGroup>
        <fx:Group width="8"/>
      </fx:HGroup>
      <fx:Group width="100"/>
    </fx:HGroup>
    <fx:Group height="100"/>
  </fx:VGroup>
  
</fx:Skin>